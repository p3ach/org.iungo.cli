SKIP :
{
  " "
| "\r"
| "\t"
| "\n"
}

TOKEN :
{
  < SEMI_COLON : ";" >
| < ARGUMENTS : "arguments" >
| < BOOLEAN : "boolean" >
| < BREAK : "break" >
| < CALL : "call" >
| < CLOSE : "close" >
| < CONFIG : "config" >
| < CONNECT : "connect" >
| < CONSOLE : "console" >
| < CONTEXT : "context" >
| < CONTINUE : "continue" >
| < DEFINE : "define" >
