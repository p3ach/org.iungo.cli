| < ELSE : "else" >
| < FALSE : "false" >
| < FROM : "from" >
| < GET : "get" >
| < GREP : "grep" >
| < HTTP : "http" >
| < ID : "id" >
| < IF : "if" >
| < INPUT : "input" >
| < INTEGER : "integer" >
| < IUNGO : "iungo" >
| < KEY : "key" >
| < LEVEL : "level" >
| < LITERAL : "literal" >
| < LOG : "log" >
| < LONG : "long" >
| < MAPPER : "mapper" >
| < METHOD : "method" >
| < NAME : "name" >
| < NEW : "new" >
| < NODE : "node" >
